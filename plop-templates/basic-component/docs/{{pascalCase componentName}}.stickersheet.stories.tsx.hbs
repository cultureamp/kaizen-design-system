import React from 'react'
import { type Meta } from '@storybook/react'
import { StickerSheet, type StickerSheetStory } from '~storybook/components/StickerSheet'
import { {{pascalCase componentName}} } from '../index'

export default {
  title: '{{storyTitle}}',
  parameters: {
    chromatic: { disable: false },
    controls: { disable: true },
  },
} satisfies Meta

const StickerSheetTemplate: StickerSheetStory = {
  render: ({ isReversed }) => (
    <StickerSheet
      isReversed={isReversed}
      title="{{pascalCase componentName}}"
      headers={['Default', 'Hover', 'Active', 'Focus']}
    >
      <StickerSheet.Row>
        <{{pascalCase componentName}} exampleRequiredString="{{pascalCase componentName}}" />
        <{{pascalCase componentName}} isBooleanProp exampleRequiredString="{{pascalCase componentName}}" />
        <{{pascalCase componentName}} exampleRequiredString="{{pascalCase componentName}}" data-sb-pseudo-styles="hover" />
