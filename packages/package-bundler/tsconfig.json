{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2019"],
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "ESNext"
  },
  "include": ["src/*", "bin/**.ts"],
  "exclude": ["node_modules"]
}
