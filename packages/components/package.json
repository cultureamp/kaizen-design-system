{
  "name": "@kaizen/components",
  "version": "1.4.25",
  "description": "Kaizen component library",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "future",
    "dist",
    "icons"
  ],
  "scripts": {
    "prepublish": "yarn build:deps && yarn build:components && yarn postBuild && yarn dist:clean",
    "build": "yarn clean && yarn prepublish",
    "build:components": "tsup",
    "build:deps": "yarn workspace @kaizen/design-tokens build && yarn workspace @kaizen/tailwind build",
    "postBuild": "yarn dist:copy-tailwind && yarn dist:combine-styles && yarn dist:postcss",
    "dist:copy-tailwind": "cp src/tailwind.css dist/tailwind.css",
    "dist:combine-styles": "concat-cli -f ./dist/**/*.css ./dist/*.css -o ./dist/styles.css",
    "dist:postcss": "postcss dist/styles.css --output dist/styles.css",
    "dist:clean": "rm ./dist/tailwind.css",
    "clean": "rimraf 'dist'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cultureamp/kaizen-design-system.git"
  },
  "author": "Geoffrey Chong <geoff.chong@cultureamp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cultureamp/kaizen-discourse/issues"
  },
  "homepage": "https://github.com/cultureamp/kaizen-design-system#readme",
  "dependencies": {
    "@kaizen/design-tokens": "^10.3.1",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@kaizen/tailwind": "^0.5.1",
    "autoprefixer": "^10.4.13",
    "concat-cli": "^4.0.0",
    "cssnano": "^5.1.15",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-modules": "^6.0.0",
    "postcss-nesting": "^11.2.1",
    "tailwindcss": "^3.2.7",
    "tsup": "^6.6.3"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.0 || ^18.0.0"
  }
}
