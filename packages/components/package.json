    "svgo": "^3.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "typescript-transform-paths": "^3.4.7"
  },
  "peerDependencies": {
    "@cultureamp/i18n-react-intl": "^2.5.5",
