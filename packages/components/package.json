{
  "name": "@kaizen/components",
  "version": "1.4.19",
  "description": "Kaizen component library",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "future",
    "dist",
    "icons"
  ],
  "scripts": {
    "prepublish": "yarn build:components && yarn postBuild && yarn dist:clean",
    "build": "yarn clean && yarn prepublish",
    "build:components": "tsup",
    "postBuild": "yarn dist:copy-tailwind && yarn dist:combine-styles && yarn dist:postcss",
    "dist:copy-tailwind": "cp src/tailwind.css dist/tailwind.css",
    "dist:combine-styles": "concat-cli -f ./dist/**/*.css ./dist/*.css -o ./dist/styles.css",
    "dist:postcss": "postcss dist/styles.css --output dist/styles.css",
    "dist:clean": "rm ./dist/tailwind.css",
    "clean": "rimraf 'dist'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cultureamp/kaizen-design-system.git"
  },
  "author": "Geoffrey Chong <geoff.chong@cultureamp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cultureamp/kaizen-discourse/issues"
  },
  "homepage": "https://github.com/cultureamp/kaizen-design-system#readme",
