{
  "extends": ["../../tsconfig.json", "@kaizen/package-bundler/shared.json"],
  "compilerOptions": {
    "paths": {
      "~storybook/*": ["../../storybook/*"],
      "~types/*": ["./src/types/*"],
      "~utils/*": ["./src/utils/*"],
      "~components/*": ["./src/*"]
    }
  },
  "files": ["types.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "moduleTypes": {
      "src/Icon/bin/**/*": "cjs"
    }
  }
}
