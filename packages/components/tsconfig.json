{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "~storybook/*": ["../../storybook/*"],
      "~types/*": ["./src/types/*"],
      "~utils/*": ["./src/utils/*"],
      "~components/*": ["./src/*"]
    }
  },
  "files": ["types.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "moduleTypes": {
      "src/Icon/bin/**/*": "cjs"
    }
  }
}
