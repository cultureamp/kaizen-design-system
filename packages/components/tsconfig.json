{
  "extends": "@kaizen/package-bundler/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~storybook/*": ["../../.storybook/*"],
      "~tests": ["./__tests__/index"],
      "~tests/*": ["./__tests__/*"],
      "~types/*": ["./src/types/*"],
      "~utils/*": ["./src/utils/*"],
      "~components/*": ["./src/*"]
    },
    "types": ["@testing-library/jest-dom"]
  },
  "files": ["types.d.ts"],
  "include": ["src/**/*", "__tests__/**/*", "codemods/**/*"],
  "exclude": ["node_modules"]
}
