{
  "extends": "../../tsconfig.dist.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"],
  "compilerOptions": {
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist",
    "declarationMap": true,
    "target": "es5",
    "module": "CommonJS",
    "noUncheckedIndexedAccess": false
  },
}
