{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
}
