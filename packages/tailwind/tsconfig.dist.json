{
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "noEmit": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist",
    "declarationMap": true,
    "target": "es5",
    "module": "CommonJS",
    "noUncheckedIndexedAccess": false
  }
}
