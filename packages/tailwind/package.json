{
  "name": "@kaizen/tailwind",
  "version": "1.2.14",
  "description": "Kaizen Tailwind presets",
  "scripts": {
    "build": "pnpm package-bundler build && pnpm build:docs:styles",
    "build:docs:styles": "npx tailwindcss -i ./src/_docs/utils/tailwind.css -o ./dist/docs/tailwind.css",
    "clean": "rimraf -g '**/*.d.ts' '**/*.js' '**/*.map'",
    "lint:ts": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cultureamp/kaizen-design-system.git",
    "directory": "packages/tailwind"
  },
  "bugs": {
    "url": "https://github.com/cultureamp/kaizen-design-system/issues"
  },
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "author": "",
  "private": false,
  "license": "MIT",
  "dependencies": {
    "@kaizen/design-tokens": "workspace:*"
  },
  "devDependencies": {
    "@kaizen/components": "workspace:*",
    "@kaizen/package-bundler": "workspace:*",
    "rollup": "^4.20.0",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.6.3"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.4.7"
  }
}
