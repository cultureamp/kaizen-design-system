  "dependencies": {
    "@kaizen/deprecated-component-library-helpers": "^1.3.6",
    "@kaizen/hosted-assets": "^1.0.1",
    "@types/classnames": "^2.2.6",
    "@types/lodash": "^4.14.132",
    "@types/react-select": "^3.0.5",
    "@types/uuid": "^3.4.4",
    "classnames": "^2.2.6",
