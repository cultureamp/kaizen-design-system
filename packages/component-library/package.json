    "**/*.d.ts",
    "!**/*.spec.*",
    "!**/*.snap",
    "!draft-templates",
    "!stories",
    "!tsconfig.dist.json"
  ],
  "sideEffects": false,
  "version": "9.3.0",
  "private": false,
  "license": "MIT",
  "peerDependencies": {
    "@kaizen/design-tokens": "^2.5.0",
    "focus-visible": "4.x || 5.x",
    "react": "^16.9.0"
  },
  "dependencies": {
    "@kaizen/deprecated-component-library-helpers": "^2.1.1",
    "@kaizen/hosted-assets": "^1.1.0",
    "@types/classnames": "^2.2.6",
    "@types/lodash": "^4.14.132",
    "@types/uuid": "^3.3.2",
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "motion-ui": "cultureamp/motion-ui",
    "react-focus-lock": "^1.19.1",
    "react-media": "^1.9.2",
    "uuid": "^3.3.2"
  },
