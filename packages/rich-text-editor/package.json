  "license": "MIT",
  "dependencies": {
    "@cultureamp/rich-text-toolkit": "^2.0.1",
    "@kaizen/a11y": "^1.7.10",
    "@kaizen/component-base": "^1.1.5",
    "@kaizen/component-library": "^16.7.1",
    "@kaizen/draft-form": "^10.3.12",
    "@kaizen/draft-tooltip": "^5.4.40",
    "@kaizen/notification": "^1.5.4",
    "classnames": "^2.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.3.0",
