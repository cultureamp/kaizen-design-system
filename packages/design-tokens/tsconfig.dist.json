{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "module": "CommonJS",
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.spec.ts"]
}
