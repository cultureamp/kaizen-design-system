{
  "extends": "../../tsconfig.dist.json",
  "compilerOptions": {
    "noEmit": false,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist",
    "declarationMap": true,
    "declaration": true,
    "target": "es5",
    "module": "CommonJS",
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.spec.ts"]
}
