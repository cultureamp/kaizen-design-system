{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "noEmit": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
