{
  "private": true,
  "workspaces": [
    "packages/*",
    "draft-packages/*",
    "legacy-packages/*",
    "site"
  ],
  "engines": {
    "node": "^14.15.1"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006 -c storybook",
    "storybook:build": "build-storybook -c storybook -o storybook/public",
    "gatsby": "yarn workspace site gatsby",
    "eslint": "eslint . -c .eslintrc.js --ext .ts,.tsx",
    "prettier": "prettier --check '**/*'",
    "test": "jest",
    "compile": "tsc",
    "lint": "elm-format --validate packages && yarn eslint --max-warnings=0 && yarn prettier && stylelint '**/*.scss'",
    "lint:fix": "elm-format --yes packages && yarn eslint --max-warnings=0 --fix && yarn prettier --write",
    "clean:storybook": "rimraf 'storybook/public'",
    "clean": "lerna run clean && yarn gatsby clean && yarn clean:storybook && rimraf 'elm-stuff'",
    "reset": "yarn clean && yarn install --force",
    "chromatic": "chromatic"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "ie": "11"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@cultureamp/elm-storybook": "cultureamp/elm-storybook#0.2.1",
    "@storybook/addon-a11y": "^6.1.9",
    "@storybook/addon-essentials": "^6.1.9",
    "@storybook/api": "^6.1.9",
    "@storybook/addons": "^6.1.9",
    "@storybook/components": "^6.1.16",
    "@storybook/core-events": "^6.1.11",
    "@storybook/react": "^6.1.9",
    "@storybook/theming": "^6.1.9",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "11.2.3",
    "@testing-library/react-hooks": "^4.0.0",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^14.14.21",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/storybook__react": "^5.2.1",
    "@types/webpack": "^4.39.1",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.15.1",
    "@typescript-eslint/parser": "4.4.1",
    "babel-elm-assets-plugin": "^1.2.2",
    "babel-loader": "^8.0.6",
    "chalk": "^2.4.2",
    "css-loader": "^3.2.0",
    "elm": "0.19.0-no-deps",
    "elm-css-modules-plugin": "^1.0.1",
    "elm-format": "^0.8.4",
    "elm-hot-webpack-loader": "^1.1.2",
    "elm-webpack-loader": "^7.0.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "focus-visible": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^24.9.0",
    "jest-static-stubs": "^0.0.1",
    "lerna": "^3.20.2",
    "lodash": "^4.17.20",
    "node-sass": "^4.12.0",
    "normalize.css": "^8.0.1",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-gtm-module": "^2.0.10",
    "react-test-renderer": "^17.0.1",
    "sass-loader": "^8.0.0",
    "storybook-addon-designs": "^5.4.3",
    "style-loader": "^1.0.0",
    "stylelint": "^13.6.0",
    "svg-sprite-loader": "^5.2.1",
    "svgo": "^1.3.0",
    "svgo-loader": "^2.2.1",
    "ts-jest": "^26.4.0",
    "typescript": "^3.6.3",
    "typescript-plugin-css-modules": "^2.4.0",
    "webpack": "^4.40.2"
  },
  "devDependencies": {
    "@storybook/codemod": "^6.1.9",
    "@storybook/csf": "^0.0.1",
    "@storybook/node-logger": "^6.1.9",
    "chromatic": "^5.2.0",
    "danger": "^10.6.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "glob": "^7.1.1",
    "husky": "^4.2.5",
    "jscodeshift": "^0.7.0",
    "lint-staged": "^10.4.0",
    "loader-utils": "^1.0.2",
    "node-elm-compiler": "^5.0.0",
    "yargs": "^16.2.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  }
}
