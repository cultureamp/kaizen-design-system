{
  "private": true,
  "workspaces": [
    "site",
    "storybook"
  ],
  "engines": {
    "node": "10.16.3"
  },
  "scripts": {
    "gatsby": "yarn workspace @kaizen/site gatsby",
    "tslint": "tslint --project .",
    "prettier": "prettier --check '**/*'",
    "test": "jest",
    "compile": "tsc",
    "lint": "yarn tslint && yarn prettier",
    "lint:fix": "yarn tslint --fix && yarn prettier --write",
    "find:node_modules": "find . -name node_modules -type d -prune",
    "rm-rf": "xargs -I % bash -c 'echo % && rm -rf %'",
    "reset": "yarn -s find:node_modules | yarn rm-rf && yarn setup",
    "setup": "yarn --frozen-lockfile"
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/webpack": "^4.39.1",
    "babel-loader": "^8.0.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jest-static-stubs": "^0.0.1",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3",
    "typescript-tslint-plugin": "^0.5.4",
    "webpack": "^4.40.2"
  }
}
