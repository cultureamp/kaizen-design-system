    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.0",
    "turbo": "^1.10.3",
    "typescript": "^4.9.5",
    "webpack": "^5.85.0"
  },
  "resolutions": {
    "@types/react": "^18.2.11"
  },
  "resolutionsComments": {
    "@types/react": "@testing-library/react-12 has an incorrect dep (instead of peerDep) of @types/react@^17 which we don't want"
  }
}
