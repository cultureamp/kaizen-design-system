{
  "private": true,
  "workspaces": [
    "packages/*",
    "site"
  ],
  "engines": {
    "node": "10.16.3"
  },
  "scripts": {
    "ts-node": "TS_NODE_TRANSPILE_ONLY=true ts-node",
    "storybook": "yarn ts-node node_modules/.bin/start-storybook -c storybook",
    "storybook:build": "yarn ts-node node_modules/.bin/build-storybook -c storybook -o storybook/public",
    "gatsby": "yarn workspace site gatsby",
    "tslint": "tslint --project .",
    "prettier": "prettier --check '**/*'",
    "test": "jest",
    "compile": "tsc",
    "lint": "elm-format --validate packages && yarn tslint && yarn prettier",
    "lint:fix": "elm-format --yes packages && yarn tslint --fix && yarn prettier --write",
    "clean": "lerna run clean && yarn gatsby clean && rm -rf elm-stuff storybook/public",
    "reset": "yarn clean && yarn setup --force",
    "setup": "yarn install --frozen-lockfile"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@cultureamp/elm-storybook": "cultureamp/elm-storybook#0.1.0",
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/addon-backgrounds": "^5.2.4",
    "@storybook/addon-options": "^5.2.4",
    "@storybook/addon-viewport": "^5.2.4",
    "@storybook/react": "^5.2.1",
    "@storybook/theming": "^5.2.1",
    "@testing-library/react": "^8.0.1",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/storybook__react": "^4.0.2",
    "@types/webpack": "^4.39.1",
    "babel-elm-assets-plugin": "^1.2.2",
    "babel-loader": "^8.0.6",
    "chalk": "^2.4.2",
    "css-loader": "^3.2.0",
    "elm": "^0.19.0-no-deps",
    "elm-css-modules-plugin": "^1.0.1",
    "elm-format": "^0.8.2",
    "elm-hot-webpack-loader": "^1.1.2",
    "elm-upgrade-shims": "cultureamp/elm-upgrade-shims#0.2.1",
    "elm-webpack-loader": "^6.0.0",
    "file-loader": "^4.2.0",
    "focus-visible": "^4.1.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jest-static-stubs": "^0.0.1",
    "lerna": "^3.16.4",
    "node-sass": "^4.12.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "svg-sprite-loader": "^4.1.6",
    "svgo": "^1.3.0",
    "svgo-loader": "^2.2.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3",
    "typescript-tslint-plugin": "^0.5.4",
    "webpack": "^4.40.2"
  }
}
