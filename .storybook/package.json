{
  "name": "@docs/storybook",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:ts": "tsc --noEmit",
    "dev": "storybook dev -c ./ -p 6006",
    "preview": "NODE_ENV=production pnpm dev --docs",
    "build": "storybook build -c ./ -o ./public",
    "test": "test-storybook -c ./ --skipTags='skip-test' --url http://127.0.0.1:6006",
    "clean": "rimraf ./public && rimraf ./node_modules"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@kaizen/components": "workspace:*",
    "@kaizen/design-tokens": "workspace:*",
    "@kaizen/tailwind": "workspace:*",
    "@rollup/plugin-alias": "^5.1.0",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/manager-api": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@storybook/test-runner": "^0.19.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "axe-playwright": "^2.0.1",
    "classnames": "^2.5.1",
    "globals": "^15.9.0",
    "sass": "^1.77.8",
    "storybook": "^8.2.9",
    "vite": "^5.4.1"
  },
  "peerDependencies": {
    "playwright": "^1.46.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
