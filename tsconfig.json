{
  "extends": "./packages/package-bundler/shared.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "noEmit": true,
    "paths": {
      "~storybook/*": ["storybook/*"],
      "~types/*": ["packages/components/src/types/*"],
      "~utils/*": ["packages/components/src/utils/*"],
      "~components/*": ["packages/components/src/*"],
      "~design-tokens/*": ["packages/design-tokens/src/*"]
    }
  },
  "files": ["./types.d.ts"],
  "include": ["packages/**/*", "storybook/**/*", "docs/**/*.tsx"],
  "exclude": ["**/node_modules"]
}
