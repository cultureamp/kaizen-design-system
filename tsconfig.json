{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "noEmit": true,
    "types": ["@testing-library/jest-dom"]
  },
  "exclude": ["**/node_modules"]
}
