{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "allowJs": false,
    "noEmit": true
  },
  "files": ["./types.d.ts"],
  "include": ["packages/**/*", "draft-packages/**/*", "storybook/**/*", "packages/select/node_modules/types.ts"],
  "exclude": ["**/node_modules"]
}
