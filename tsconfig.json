{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "allowJs": false,
    "noEmit": true
  },
  "include": ["./types.d.ts", "./packages/**/*", "./draft-packages/**/*"],
  "exclude": ["**/node_modules"]
}
