{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "noEmit": true,
    "paths": {
      "~storybook/*": ["storybook/*"],
      "~types/*": ["packages/components/src/types/*"],
      "~utils/*": ["packages/components/src/utils/*"],
      "~components/*": ["packages/components/src/*"],
      "~tokens/*": ["packages/design-tokens/src/*"]
    }
  },
  "files": ["./types.d.ts"],
  "include": [
    "packages/**/*",
    "draft-packages/**/*",
    "storybook/**/*",
    "docs/**/*.tsx"
  ],
  "exclude": ["**/node_modules", "packages/components/**/*"]
}
