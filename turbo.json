{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["packages/**"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "lint:ts": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:ci": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "@kaizen/components#build": {
      "dependsOn": [
        "@kaizen/design-tokens#build",
        "@kaizen/package-bundler#build"
      ],
      "inputs": ["src/**", "rollup.config.mjs", "tsconfig*.json"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "@kaizen/tailwind#build": {
      "dependsOn": ["@kaizen/design-tokens#build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "@kaizen/design-tokens#build": {
      "inputs": ["css/**", "less/**", "sass/**", "src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/package-bundler#build": {
      "inputs": ["bin/*", "src/**", "tsconfig*.json"],
      "outputs": ["dist/**"],
      "cache": false
    }
  }
}
