{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^clean"],
      "outputs": ["dist/**"],
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "clean": {
      "cache": false,
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "@kaizen/components": {
      "dependsOn": ["@kaizen/design-tokens#build", "@kaizen/tailwind#build"]
    }
  }
}
