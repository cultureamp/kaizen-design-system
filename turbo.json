{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "storybook:build": {
      "dependsOn": [
        "@kaizen/components#transform-svgs",
        "@kaizen/tailwind#build",
        "@kaizen/design-tokens#build"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/*.d.ts", "**/*.js", "**/*.map"],
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "prepublishOnly": {
      "dependsOn": ["^prepublishOnly"],
      "outputs": ["**/*.d.ts", "**/*.js", "**/*.map"],
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "clean": {
      "cache": false
    },
    "@kaizen/components#build": {
      "dependsOn": [
        "transform-svgs",
        "@kaizen/tailwind#build",
        "@kaizen/design-tokens#build"
      ],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/components#transform-svgs": {},
    "@kaizen/tailwind#build": {
      "dependsOn": ["@kaizen/design-tokens#build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/design-tokens#build": {
      "inputs": ["css/**", "less/**", "sass/**", "src/**", "tokens/**"],
      "outputs": ["dist/**"]
    }
  }
}
