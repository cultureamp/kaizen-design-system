{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "storybook:build": {
      "dependsOn": ["@kaizen/tailwind#build", "@kaizen/design-tokens#build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["packages/**"],
      "outputs": ["dist/**"]
    },
    "test": {},
    "test:ci": {},
    "test:treeshake": {
      "dependsOn": ["^build"],
      "inputs": ["dist/**"]
    },
    "prepublishOnly": {
      "dependsOn": ["^prepublishOnly"],
      "inputs": ["packages/**"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "@kaizen/components#build": {
      "dependsOn": [
        "@kaizen/design-tokens#build",
        "@kaizen/package-bundler#build"
      ],
      "inputs": ["src/**", "rollup.config.mjs", "tsconfig*.json"],
      "outputs": ["dist/**"]
    },
    "@kaizen/components#test:treeshake": {
      "dependsOn": ["@kaizen/components#build"],
      "inputs": ["dist/**"]
    },
    "@kaizen/tailwind#build": {
      "dependsOn": ["@kaizen/design-tokens#build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/design-tokens#build": {
      "inputs": ["css/**", "less/**", "sass/**", "src/**", "tokens/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/package-bundler#build": {
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": ["dist/**"]
    }
  }
}
