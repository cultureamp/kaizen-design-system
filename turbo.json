{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "storybook:build": {
      "dependsOn": ["@kaizen/tailwind#build", "@kaizen/design-tokens#build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/*.d.ts", "**/*.js", "**/*.map"],
      "inputs": ["packages/**"]
    },
    "prepublishOnly": {
      "dependsOn": ["^prepublishOnly"],
      "outputs": ["**/*.d.ts", "**/*.js", "**/*.map"],
      "inputs": ["packages/**"]
    },
    "clean": {
      "cache": false
    },
    "lint:styles": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:ci": {
      "cache": false
    },
    "@kaizen/components#build": {
      "dependsOn": ["@kaizen/tailwind#build", "@kaizen/design-tokens#build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/tailwind#build": {
      "dependsOn": ["@kaizen/design-tokens#build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/design-tokens#build": {
      "inputs": ["css/**", "less/**", "sass/**", "src/**", "tokens/**"],
      "outputs": ["dist/**"]
    }
  }
}
