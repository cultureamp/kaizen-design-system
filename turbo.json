{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "publish": {
      "dependsOn": ["^publish", "clean"],
      "outputs": ["**/*.d.ts", "**/*.js", "**/*.map"],
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "clean": {
      "cache": false
    },
    "@kaizen/components#publish": {
      "dependsOn": [
        "@kaizen/tailwind#publish",
        "@kaizen/design-tokens#publish"
      ],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/tailwind#publish": {
      "dependsOn": ["@kaizen/design-tokens#publish"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "@kaizen/design-tokens#publish": {
      "inputs": ["css/**", "less/**", "sass/**", "src/**", "tokens/**"],
      "outputs": ["dist/**"]
    }
  }
}
