{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "clean"],
      "outputs": ["dist/**"],
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "clean": {
      "cache": false,
      "inputs": ["packages/**", "draft-packages/**"]
    },
    "@kaizen/components#build": {
      "dependsOn": [
        "@kaizen/design-tokens#build",
        "@kaizen/tailwind#build",
        "@kaizen/typography#build"
      ]
    }
  }
}
